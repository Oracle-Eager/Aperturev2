{
  "name": "Aperture",
  "short_name": "Aperture",
  "description": "A private, ephemeral browsing environment for viewing web content securely without leaving a trace.",
  "start_url": "./index.html",
  "scope": "./",
  "id": "/?source=pwa",
  "display_override": [
    "window-controls-overlay",
    "standalone"
  ],
  "display": "standalone",
  "background_color": "#0d0d0f",
  "theme_color": "#141416",
  "orientation": "any",
  "categories": [
    "utilities",
    "productivity",
    "security"
  ],
  "icons": [
    {
      "src": "icon-192.png",
      "sizes": "192x192",
      "type": "image/png",
      "purpose": "any maskable"
    },
    {
      "src": "icon-192.png",
      "sizes": "192Ã—192",
      "type": "image/png",
      "purpose": "any maskable"
    }
  ],
  "shortcuts": [
    {
      "name": "New Tab",
      "short_name": "New Tab",
      "url": "./index.html?action=new-tab",
      "icons": [{ "src": "icon-192.png", "sizes": "192x192" }]
    },
    {
      "name": "Paste and Go",
      "short_name": "Paste",
      "url": "./index.html?action=paste-and-go",
      "icons": [{ "src": "icon-192.png", "sizes": "192x192" }]
    }
  ],
  "share_target": {
    "action": "./index.html",
    "method": "GET",
    "params": {
      "url": "url"
    }
  },
  "file_handlers": [
    {
      "action": "./index.html",
      "accept": {
        "text/html": [".html", ".htm"]
      }
    }
  ]
}